<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <solid android:color="@color/white" />

    <!-- Corner radius for smooth rounded edges -->
    <corners android:radius="16dp" />

    <!-- Soft shadow effect (for elevation use in CardView/MaterialCardView) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Border/Stroke (optional) -->
    <stroke
        android:width="1dp"
        android:color="@color/light_gray" />
</shape>